<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> My Store: @ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <header class=" container" style=" background-color:lightgreen;">
            <h4 style=" text-align: center; color:green;">
                Free ship don tu 40k, giam nhieu hon cung
                <span style="font-weight:bolder; font-style:italic;"></span>><span style=" color:blue;">FREESHIP</span>
            </h4>
        </header>
        <div class="container">
            <div class=" navbar-header"></div>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="\Home\Index" class=" mavbar-brand"><img src="~/Images/logo.PNG" style="max-height:50px; " /></a>
            <div />

            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li><div style="position:relative;"><i class="fas fa-home"></i></div>
                    <li><div style="position:relative;"><i class="fas fa-user"></i></div>
                    <li><div style="position:relative;"><i class="fas fa-shopping-cart"></i><span class=""></span>
                   @Html.ActionLink("Giỏ hàng", "Index" , "Cart" )</div>i>
           </li>
                    </ul>
                </div>
            </div>
        </div>

    <div class="container body-content" style="min-height:500px; margin-top: 50px;">
        @RenderBody()
    </div>
    <div class="navbar">
        <footer class="container modal-footer" style="background-color:lightgray;">
            <div class="navbar-text">&copy; @DateTime.Now.Year- Tên ung dung </div>
            <h4>Contact</h4>
            <p>Thiên Bảo</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

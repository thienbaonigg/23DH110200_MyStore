@model MyStore.Models.ViewModel.LoginVM

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .accountbtn {
        width: 275px;
        height: 40px;
        border: 1px solid #808080;
        margin: 5px;
        align-items: center;
    }
</style>


<!DOCTYPE html>
<div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <h2 class="col-md-6" style="text-align:center;">Đăng nhập</h2>
    </div>
    @* Tên đăng nhập *@
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
    </div>
        <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
        <div class="col-md-4">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" }) 
        @Html.ValidationMessageFor(m => m.Password)
        </div>
        </div>

        <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
        <input type="submit" value="Dăng nhập" class="btn btn-info accountbtn" /><br />
        <p>Bạn Chưa Có Tài khoản? <a href="@Url.Action("Register", "Account", null)" />Đăng ký ngay</p>
        </div>
        </div>
    }
    </div>